{{!< default}}

<div class="container wrapper">
  {{!-- Error page --}}
  <div class="page__hdr flex flex-cc flex-col m-b-lg">
    <h1 class="m-b-xs">{{statusCode}} - {{message}}</h1>
    <div class="err m-b">
      <p class="err__descr m-b text-acc-3 text-center">
        {{t "Something went wrong! We can't seem to find the page you are looking for."}}
      </p>

      {{!-- Links to home and contact page --}}
      <div class="err__links flex flex-cc">
        {{#link href="javascript:history.back()" class="btn btn--filled m-r"}}{{t "Back"}}{{/link}}
        {{#link href="/" class="btn btn--filled m-r"}}{{t "Home"}}{{/link}}
      </div>
    </div>
  </div>

  <div class="err__recommend">
    {{!-- Recent posts --}}
    {{#get "posts" include="tags,authors" limit="3"}}
      {{#if posts}}
        <div class="section m-b js-recent-posts">
          <span class="section__title is-block m-b-sm">{{t "Recent posts"}}</span>

          <div class="grid post-feed auto m-b-xl">
            {{#foreach posts}}
              {{> post-card }}
            {{/foreach}}
          </div>
        </div>
      {{/if}}
    {{/get}}
  </div>
</div>