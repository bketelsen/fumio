{
  "name": "fumio",
  "description": "Fumio Ghost Theme",
  "demo": "https://fumio.bironthemes.com",
  "version": "1.4.0",
  "author": {
    "name": "Biron Themes",
    "email": "bironthemes@gmail.com",
    "url": "https://bironthemes.com"
  },
  "gpm": {
    "type": "theme",
    "categories": [
      "Project",
      "Portfolio",
      "Blog"
    ]
  },
  "keywords": [
    "ghost",
    "theme",
    "ghost-theme"
  ],
  "repository": {
    "type": "git",
    "url": "https://github.com/bironthemes/fumio-ghost.git"
  },
  "scripts": {
    "dev": "gulp",
    "zip": "gulp zip",
    "test": "gscan ."
  },
  "devDependencies": {
    "@babel/core": "^7.12.10",
    "@babel/preset-env": "^7.12.11",
    "beeper": "^2.1.0",
    "browser-sync": "^2.26.13",
    "cssnano": "^5.0.4",
    "cssnano-preset-advanced": "^5.1.1",
    "gscan": "^4.20.0",
    "gulp": "^4.0.2",
    "gulp-babel": "^8.0.0",
    "gulp-concat": "^2.6.1",
    "gulp-postcss": "^9.0.0",
    "gulp-rename": "^2.0.0",
    "gulp-uglify": "^3.0.2",
    "gulp-zip": "^5.1.0",
    "postcss": "^8.2.13",
    "postcss-cssential": "^1.1.0",
    "postcss-import": "^14.0.2",
    "postcss-mixins": "^9.0.0",
    "postcss-nested": "^5.0.5",
    "postcss-preset-env": "^7.6.0",
    "pump": "^3.0.0"
  },
  "dependencies": {
    "@tryghost/content-api": "^1.9.2",
    "fitvids": "^2.1.1",
    "fslightbox": "^3.3.0",
    "fuse.js": "^6.4.6",
    "headroom.js": "^0.12.0",
    "lazysizes": "^5.3.0",
    "tiny-slider": "^2.9.3",
    "tocbot": "^4.12.0"
  },
  "config": {
    "custom": {
      "color_scheme": {
        "type": "select",
        "options": [
          "System",
          "Light",
          "Dark"
        ],
        "default": "System"
      },
      "font_family": {
        "type": "select",
        "options": [
          "System font",
          "Urbanist & Inter",
          "DM Sans",
          "Inter",
          "Playfair Display & Open Sans",
          "Roboto Mono"
        ],
        "default": "System font"
      },
      "background_pattern": {
        "type": "select",
        "options": [
          "none",
          "grain",
          "topography",
          "dots",
          "lines",
          "graph-paper"
        ],
        "default": "none"
      },
      "header_position": {
        "type": "select",
        "options": [
          "normal",
          "sticky",
          "floating"
        ],
        "default": "normal"
      },
      "search_type": {
        "type": "select",
        "options": [
          "native",
          "custom",
          "none"
        ],
        "default": "native"
      },
      "hero_headline": {
        "type": "text",
        "group": "homepage"
      },
      "hero_description": {
        "type": "text",
        "group": "homepage"
      },
      "hero_image_style": {
        "type": "select",
        "options": [
          "background",
          "background-full",
          "side",
          "bottom",
          "hidden"
        ],
        "default": "hidden",
        "group": "homepage"
      },
      "hero_cta": {
        "type": "select",
        "options": [
          "subscribe-form",
          "primary-cta",
          "none"
        ],
        "default": "subscribe-form",
        "group": "homepage"
      },
      "project_feed_layout": {
        "type": "select",
        "options": [
          "grid",
          "asymmetric-grid",
          "list",
          "asymmetric-list",
          "alternating-list"
        ],
        "default": "asymmetric-grid",
        "group": "homepage"
      },
      "max_project_count": {
        "type": "select",
        "options": [
          "1",
          "2",
          "3",
          "4",
          "5",
          "6"
        ],
        "default": "6",
        "group": "homepage"
      },
      "project_card_color": {
        "type": "boolean",
        "default": true,
        "group": "homepage"
      },
      "enable_breadcrumbs": {
        "type": "boolean",
        "default": false,
        "group": "post"
      },
      "comment_plugin": {
        "type": "select",
        "options": [
          "Native",
          "Cove",
          "Disqus",
          "None"
        ],
        "default": "None",
        "group": "post"
      },
      "comment_plugin_id": {
        "type": "text",
        "default": "",
        "group": "post"
      }
    },
    "card_assets": true,
    "posts_per_page": 6,
    "image_sizes": {
      "xxs": {
        "width": 30
      },
      "xs": {
        "width": 100
      },
      "s": {
        "width": 300
      },
      "m": {
        "width": 600
      },
      "l": {
        "width": 1000
      },
      "xl": {
        "width": 2000
      }
    }
  }
}
