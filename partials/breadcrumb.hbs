<ul class="breadcrumb">
	<li class="breadcrumb-item"><a href="{{@site.url}}">{{t "Home"}}</a></li>
  {{#has tag="#project"}}
	  <li class="breadcrumb-item"><a href="/projects/">{{t "Projects"}}</a></li>
  {{else}}
	  <li class="breadcrumb-item"><a href="/blog/">{{t "Blog"}}</a></li>
  {{/has}}
	{{#foreach tags limit="1"}}
    <li class="breadcrumb-item"><a href="{{url}}">{{name}}</a></li>
  {{/foreach}}
  {{!-- <li class="breadcrumb-item breadcrumb-item-current">{{title}}</li> --}}
</ul>