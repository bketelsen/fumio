{{!-- Site footer --}}
<footer class="footer">
  <div class="container wrapper">

    {{!-- Footer Top --}}
    <div class="footer__content border-top p-t-lg">
      <div class="row">
        <div class="col-xs-12 col-md-6 m-b-lg">
          {{!-- Site title / logo --}}
          <div class="footer__brand flex items-center">
            {{#if @site.logo}}
              <img class="footer__logo m-r lazyload"
                src="{{img_url @site.logo size="s"}}"
                alt="{{@site.title}}"/>
            {{else}}
              <span class="footer__title">{{@site.title}}</span>
            {{/if}}
          </div>

          {{!-- Site description --}}
          <div class="footer__description m-b" id="footer-input-label">
            {{@site.description}}
          </div>

          {{#if @site.members_enabled}}
            {{#unless @site.members_invite_only}}
              {{#unless member}}
                {{> subscribe-form
                  form_style="inline"
                  form_class="radius-rounded"
                  input_class="w-100 radius-rounded"
                  input_label="footer-input-label"
                  button_class="btn--primary radius-rounded uppercase"
                }}
              {{/unless}}
            {{/unless}}
          {{/if}}
        </div>

        <div class="col-xs-12 col-md-4 m-b-lg">
          {{!-- Navigation --}}
          <span class="fw-700 m-b-sm display-block uppercase text-acc">{{t "Navigation"}}</span>
          <div class="grid col-2">
            {{navigation}}

            {{!-- Secondary navigation --}}
            {{#if @site.secondary_navigation}}
              {{navigation type="secondary"}}
            {{/if}}
          </div>
        </div>

        <div class="col-xs-12 col-md-2 m-b">
          {{!-- Contact and newsletter --}}
          <span class="fw-700 m-b-sm display-block uppercase text-acc">{{t "Social"}}</span>

          {{!-- Footer social --}}
          <div class="social-links flex flex-col fw-500">
            {{> social-links}}
          </div>
        </div>
      </div>
    </div>

    {{!-- Footer Copy --}}
    <div class="footer__copy text-09 text-center">
      <span>&copy;{{date format="YYYY"}}&nbsp;{{#link href=@site.url}}{{@site.title}}{{/link}}.</span>
      <span>{{t "Published with"}}&nbsp;{{#link href="https://ghost.org"}}Ghost{{/link}}&nbsp;&&nbsp;{{#link href="https://bironthemes.com/themes/fumio-ghost/"}}Fumio{{/link}}.</span>
    </div>
  </div>
</footer>
