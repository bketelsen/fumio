<div class="post-info text-acc {{class}}"> 
  <ul class="post-info__avatars">
    {{#foreach authors}}
      <li class="author-avatar {{#if profile_image}}has-image{{else}}has-icon{{/if}}">
        <a href="{{url}}" title="{{name}}" aria-label="{{name}}">
          {{#if profile_image}}
            <img class="lazyload" data-sizes="auto"
              data-src="{{img_url profile_image size="xs"}}" 
              src="{{img_url profile_image size="xxs"}}" 
              alt="{{name}}"/>
          {{else}}
            {{>icon name="user"}}
          {{/if}}
        </a>
      </li>
    {{/foreach}}
  </ul>
  <div class="post-info__detail">
    <span class="post-info__author">{{authors}}</span>
    <div class="post-info__dr">
      <time datetime="{{date format="YYYY-MM-DD"}}">{{date}}</time> 
      {{#if reading_time}}<span class="post-info__readtime">{{reading_time minute=(t "1 min read") minutes=(t "% min read")}}</span>{{/if}}
    </div>
  </div>
</div>